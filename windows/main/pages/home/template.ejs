                    <%- icons.addForm %> 
                </span> 
                <div>
                    Requisitar Item 
                </div>
            </button>
            
            <button id="moviments" class="btOption"> 
                <span id="iconBt" >
                    <%- icons.movement %> 
                </span> 
                <div>
                    Movimentações
                </div>
            </button>
            
            <button id="requests" class="btOption"> 
                <span id="iconBt" >
                    <%- icons.form %> 
                </span> 
                <div>
                    Requisições
                </div>
            </button>
            

            <button id="inventario" class="btOption"> 
                <span id="iconBt" >
                    <%- icons.checkList %> 
                </span> 
                <div>
                    Inventário
                </div>
            </button>
            
            <button id="config" class="btOption"> 
